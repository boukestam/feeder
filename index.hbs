<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>News</title>

  <style>
    body {
      font-family: Arial, Helvetica, sans-serif;
    }

    .items {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .item {
      display: flex;
      gap: 10px;
    }

    .item a {
      text-decoration: none;
      color: #333;
    }

    .item a:visited {
      color: #999;
    }

    .item-body {
      flex: 1;
    }

    .image {
      flex: 0 0 48px;
      width: 48px;
      height: 48px;
      overflow: hidden;
      border-radius: 3px;

      display: flex;
      justify-content: center;
      align-items: center;
    }

    .image img {
      width: auto;
      height: 48px;
    }

    .info {
      font-size: 0.8em;
      color: #999;

      display: flex;
    }

    .comments {
      margin-left: 5px;
    }

    .comments a {
      color: #999;
    }
  </style>
</head>

<body>
  <div class="items">
    {{#each items}}
    <div class="item">
      <a href="{{this.Link}}">
        <div class="image">
          <img src="{{this.Image}}" />
        </div>
      </a>

      <div class="item-body">
        <a href="{{this.Link}}">
          <div>{{this.Title}}</div>
        </a>

        <div class="info">
          <div>{{this.Ago}}</div>

          {{#if this.Comments}}
          <div class="comments">
            |
            <a href="{{this.Comments}}">comments</a>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</body>


</html>